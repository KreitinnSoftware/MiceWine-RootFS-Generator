+    pa_thread_mq thread_mq;
+    pa_rtpoll *rtpoll;
+    pa_rtpoll_item *rtpoll_item;
+    pa_asyncmsgq *sles_msgq;
+
+    pa_usec_t block_usec;
+
+    pa_memchunk memchunk;
